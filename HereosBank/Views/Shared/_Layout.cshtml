<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/Content/CustomElements/css/main.css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="customnavbar navbar navbar-inverse navbar-fixed-top ">
        @*Side bar*@

        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

            <div id='dropdwn'>
                <ul>
                    <li class='active'><a href='@Url.Action("Index","Dashboard")'><span>Accueil</span></a></li>
                    <li class='has-sub'>
                        <a href='@Url.Action("Index","Agences")'><span>Agences</span></a>
                        @*<ul>
                            <li><a href='#'><span>Product 1</span></a></li>
                            <li><a href='#'><span>Product 2</span></a></li>
                            <li class='last'><a href='#'><span>Product 3</span></a></li>
                        </ul>*@
                    </li>
                    <li class='has-sub'>
                        <a href='#'><span>Clients</span></a>
                       
                    </li>

                    <li class='has-sub'>
                        <a href='#'><span>Comptes</span></a>
                       
                    </li>


                    <li class='has-sub'>
                        <a href='#'><span>Privilèges</span></a>
                        
                    </li>


                    <li class='has-sub'>
                        <a href='#'><span>Transactions</span></a>
                      
                    </li>


                    <li class='has-sub'>
                        <a href='#'><span>Utilisateurs</span></a>
                    </li>

                    <li class='last'><a href='#'><span>Contact</span></a></li>
                </ul>
            </div>

        </div>

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span class="navbar-brand" onclick="openNav()"> HEROES BANK</span>
                @*@Html.ActionLink("HEROES BANK", "Index", "Dashboard", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content" style="padding-top:15px;">
        @Html.Partial("_sidebar")
        @RenderBody()
        <hr />
        <footer>
            @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
    </script>

</body>
</html>